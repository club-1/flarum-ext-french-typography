{
    "name": "club-1/flarum-ext-french-typography",
    "description": "Enhanced typography for french writings, mainly around punctuation.",
    "keywords": [
        "flarum"
    ],
    "type": "flarum-extension",
    "license": "AGPL-3.0-or-later",
    "require": {
        "flarum/core": "^1.2.0"
    },
    "authors": [
        {
            "name": "Nicolas Peugnet",
            "email": "nicolas@club1.fr",
            "role": "Developer"
        }
    ],
    "support": {
        "forum": "https://discuss.flarum.org/d/32449",
        "source": "https://github.com/club-1/flarum-ext-french-typography"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/n-peugnet"
        }
    ],
    "autoload": {
        "psr-4": {
            "Club1\\FrenchTypography\\": "src/"
        }
    },
    "suggest": {
        "club-1/flarum-ext-chore-commands": "Allows to reparse all the comment posts with the new formatter's configuration"
    },
    "extra": {
        "flarum-extension": {
            "title": "French Typography",
            "category": "",
            "icon": {
                "name": "fas fa-paragraph",
                "backgroundColor": "#a83297",
                "color": "#fff"
            }
        },
        "flarum-cli": {
            "modules": {
                "admin": false,
                "forum": false,
                "js": false,
                "jsCommon": false,
                "css": false,
                "locale": false,
                "gitConf": true,
                "githubActions": false,
                "prettier": false,
                "typescript": false,
                "bundlewatch": false,
                "backendTesting": false,
                "editorConfig": false,
                "styleci": false
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
